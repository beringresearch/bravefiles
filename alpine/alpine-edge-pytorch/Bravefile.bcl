// Lightweight PyTorch-cpu environment
base {
	image: 		"beringresearch/bravefiles/alpine/alpine-edge-mlbase"
	location: "github"
}

system {
    apk: []	
}

run {
  pip3: "install torch==1.5.0+cpu torchvision==0.6.0+cpu -f https://download.pytorch.org/whl/torch_stable.html"
  pip3: "install tensorboard"
}

service {
	name:		"alpine-edge-pytorch"
	version:	"1.5.0"
	ip: 		""
	resources {
		ram: 	"4GB"
		cpu: 	2
		gpu:	false
	}
}
