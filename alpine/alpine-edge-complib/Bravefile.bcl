// Alpine base installation with libraries required for computational packages
base {
	image: 		"alpine/edge/amd64"
	location: "public"
}

system {
  apk: 		["make", "gfortran", "g++", "openblas",
           "lapack-dev", "libexecinfo-dev", "libstdc++", "libgomp"]
}

