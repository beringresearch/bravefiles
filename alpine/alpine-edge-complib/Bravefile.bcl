service {
	image: "alpine-edge-complib-1.0"
	docker: "no"	
	name:		"alpine-edge-complib"
	version:	"1.0"
	ip: 		""
	ports:	""
	resources {
		ram: 	"2GB"
		cpu: 	2
		gpu:	"no"
	}
}
