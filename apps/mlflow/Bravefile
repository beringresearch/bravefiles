base:
  image: ubuntu/bionic/amd64
  location: public
packages:
  manager: apt
  system:
  - bash
  - python3
  - python3-pip
  - supervisor
run:
- command: sh
  args:
  - -c
  - python3 -m pip install mlflow
- command: sh
  args:
  - -c
  - supervisorctl reload
- command: sh
  args:
  - -c
  - supervisorctl update
copy:
- source: mlflow-server.conf
  target: /etc/supervisor/conf.d
service:
  image: mlflow-1.0
  name: mlflow
  docker: "no"
  version: "1.0"
  ip: 10.0.0.11
  ports:
  - 4040:4040
  - 5000:5000
  resources:
    ram: 4GB
    cpu: 2
    gpu: "no"
