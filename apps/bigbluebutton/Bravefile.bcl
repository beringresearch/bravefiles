//BCL File example
base {
	image: 		  "ubuntu/xenial/amd64"
	location: 	"public"
}

system {
    apt: 		["bash", "wget"]
}

run {
	bash: 		["-c", "wget -qO- https://ubuntu.bigbluebutton.org/bbb-install.sh | bash -s -- -w -v xenial-22 -a -w"]
}

service {
	docker: "no"
	image:		"bigbluedot-1.0"
	name:		"bigbluedot"
	version:	"1.0"
	ip: 		""
  ports: "80:80"
  resources {
		ram: 	"4GB"
		cpu: 	2
		gpu:	"no"
	}
}
