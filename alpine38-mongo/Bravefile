image:
  dist: alpine
  name: alpine/3.8/amd64
  location: images
packages:
  manager: apk
  system:
    - bash
    - mongodb
    - mongodb-tools
run:
  - command: ash
    args:
      - -c
    content: |-
      mkdir -p /data/db &&
      chown -R mongodb /data/db &&
      sed -i 's/MONGODB_IP="127.0.0.1"/MONGODB_IP="0.0.0.0"/g' /etc/conf.d/mongodb &&
      chown -R mongodb:mongodb /var/lib/mongodb &&
      chown -R mongodb:mongodb /var/log/mongodb
 
  - command: rc-update
    args:
      - add
      - mongodb
  
  - command: rc-service
    args:
      - mongodb
      - start
service:
  name: brave-base-mongo
  version: 1.0