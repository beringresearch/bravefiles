base {
  image:    "alpine/edge/amd64"
  location: "public"
}

system {
  apk:      ["bash", "gcc", "g++",
             "python3", "python3-dev",
             "openblas-dev"]
}

run {
  python3:  "-m ensurepip"
  pip3:     "--no-cache-dir install --upgrade pip setuptools"
}

service {
  name:     "alpine-edge-python3"
  version:  "1.0"
  resources {
    ram:    "2GB"
    cpu:    2
  }
}
