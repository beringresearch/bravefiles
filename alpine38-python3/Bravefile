image:
  dist: alpine
  name: brave-base-alpine38-1.0
  location: local
  tar: brave-base-alpine38-1.0.tar.gz

packages:
  manager: apk
  system:
    - bash
    - gcc
    - g++
    - python3
    - python3-dev    
    - openblas-dev

run:    
  - command: python3
    args:
      - -m
      - ensurepip
  
  - command: pip3
    args:
      - --no-cache-dir
      - install
      - --upgrade
      - pip
      - setuptools

service:
  name: alpine38-python3
  resources:
    ram: 2GB
    cpu: 2
  version: 1.0