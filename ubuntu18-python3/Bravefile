base:
  dist: ubuntu
  image: ubuntu/bionic/amd64
  location: public 

packages:
  manager: apt
  system:
    - bash
    - gcc
    - g++
    - python3
    - python3-dev
    - python3-pip  
    - libopenblas-dev

run:    
  - command: pip3
    args:
      - --no-cache-dir
      - install
      - --upgrade
      - pip
      - setuptools
      - virtualenv

service:
  name: ubuntu18-python3   
  resources:
    ram: 2GB
    cpu: 2
  version: 1.0
