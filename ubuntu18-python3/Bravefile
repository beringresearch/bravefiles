image:
  dist: ubuntu
  name: brave-base-ubuntu18-1.0
  location: local
  tar: brave-base-ubuntu18-1.0.tar.gz

packages:
  manager: apt
  system:
    - bash
    - gcc
    - g++
    - python3
    - python3-dev
    - python3-pip  
    - libopenblas-dev

run:    
  - command: pip3
    args:
      - --no-cache-dir
      - install
      - --upgrade
      - pip
      - setuptools

service:
  name: ubuntu18-python3  
  ip: 10.0.0.10  
  resources:
    ram: 2GB
    cpu: 2
  version: 1.0