//BCL File example
base {
	image: 		"ubuntu/bionic/amd64"
	location: 	"public"
}

system {
    apt: 		["bash"]
}

service {
	docker: "no"
	image:		""
	name:		""
	version:	"1.0"
	ip: 		""
	postdeploy {
		copy {
			FileName {
			source:		"/file/or/directory"
			target: 	"/file/or/directory"
			action: 	 "chmod 0700 /file/or/directory"
			}
		}
		run {
			echo: 		"Hello World"
		}	
	}
	resources {
		ram: 	"4GB"
		cpu: 	2
		gpu:	"no"
	}
}
