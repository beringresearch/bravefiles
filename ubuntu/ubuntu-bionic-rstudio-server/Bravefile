base:
  image: ubuntu/bionic/amd64
  location: public
packages:
  manager: apt
  system:
  - libxml2
  - libxml2-dev
  - bash
  - curl
  - libssl-dev
  - wget
  - libcurl4-openssl-dev
  - apt-transport-https
  - software-properties-common
  - build-essential
run:
- command: bash
  args:
  - -c
  - apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
- command: bash
  args:
  - -c
  - add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu bionic-cran40/'
- command: bash
  args:
  - -c
  - apt update
- command: bash
  args:
  - -c
  - apt upgrade
- command: bash
  args:
  - -c
  - apt install -y r-base
- command: bash
  args:
  - -c
  - |-
    echo 'options(repos = c("cloud.r-project.org",
    "http://cran.rstudio.com"))' > ~/.Rprofile
- command: bash
  args:
  - -c
  - sudo apt-get install -y gdebi-core
- command: bash
  args:
  - -c
  - wget https://download2.rstudio.org/server/bionic/amd64/rstudio-server-1.3.1073-amd64.deb
- command: bash
  args:
  - -c
  - sudo gdebi --non-interactive rstudio-server-1.3.1073-amd64.deb
service:
  image: ubuntu-bionic-rstudio-server-1.0
  name: ubuntu-bionic-rstudio-server
  docker: "no"
  version: "1.0"
  ip: ""
  ports:
  - 8787:8787
  resources:
    ram: 4GB
    cpu: 4
    gpu: "no"
  postdeploy:
    run:
    - command: bash
      args:
      - -c
      - sudo adduser rstudio
