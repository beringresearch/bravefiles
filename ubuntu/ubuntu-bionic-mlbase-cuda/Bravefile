base:
  image: ubuntu-bionic-cuda-101-1.0
  location: local
packages:
  manager: apt
  system:
  - bash
  - python3-dev
  - python3-pip
  - git
  - python3-opencv
  - sudo
  - g++
  - wget
  - tmux
  - curl
  - texlive-xetex
  - texlive-fonts-recommended
  - texlive-generic-recommended
  - pandoc
  - supervisor
run:
- command: bash
  args:
  - -c
  - python3 -m pip install --upgrade pip
- command: bash
  args:
  - -c
  - python3 -m pip install git+https://github.com/beringresearch/datasets
- command: bash
  args:
  - -c
  - python3 -m pip install transformers pandas numpy scikit-learn matplotlib seaborn notebook ipython ivis streamlit
- command: curl
  args:
  - -fLo
  - /root/.vim/autoload/plug.vim
  - --create-dirs
  - https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
- command: bash
  args:
  - -c
  - |-
    git clone https://github.com/beringresearch/dotfiles && \
    cp dotfiles/.vimrc . && \
    cp dotfiles/.tmux.conf . && \
    rm -r dotfiles
- command: bash
  args:
  - -c
  - python3 -m pip install --upgrade pip
- command: bash
  args:
  - -c
  - python3 -m pip install --upgrade tensorflow tensorflow-datasets tensorflow-addons tensorflow-io
- command: bash
  args:
  - -c
  - jupyter notebook --generate-config
- command: cat
  args:
  - '>'
  - |-
    /root/.jupyter/jupyter_notebook_config.py <<EOL
    import os
    c = get_config()
    os.environ["LD_LIBRARY_PATH"] = "/usr/local/cuda-10.2/lib64:/usr/local/cuda/lib64:"
    os.environ["PATH"] = "/usr/local/cuda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
    c.Spawner.env.update("LD_LIBRARY_PATH")
    EOL
service:
  image: ubuntu-bionic-mlbase-cuda-1.0
  name: ubuntu-bionic-mlbase-cuda
  version: "1.0"
  ip: ""
  ports:
  - 8888:8888
