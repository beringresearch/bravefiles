base:
  image: debian/buster/amd64
  location: public
packages:
  manager: apt
  system:
  - bash
  - python3
  - python3-dev
  - python3-pip
  - build-essential
  - wget
run:
- command: bash
  args:
  - -c
  - python3 -m pip install --upgrade pip
- command: bash
  args:
  - -c
  - '"$(wget -O - https://apt.llvm.org/llvm.sh)"'
- command: bash
  args:
  - -c
  - |-
    python3 -m pip install \
    numpy pandas scikit-learn matplotlib \
    tensorflow ipython notebook ivis shap
service:
  image: brave-mlbase-1.0
  name: brave-mlbase
  docker: "no"
  version: "1.0"
  ip: ""
  ports: []
  resources:
    ram: 4GB
    cpu: 2
    gpu: "no"
