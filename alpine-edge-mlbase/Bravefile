base:
  image: alpine/edge/amd64
  location: public
packages:
  manager: apk
  system:
  - lapack
run:
- command: apk
  args:
  - update
- command: apk
  args:
  - upgrade
- command: ash
  args:
  - -c
  - |-
    echo http://dl-cdn.alpinelinux.org/alpine/edge/main | tee /etc/apk/repositories && \
    echo http://dl-cdn.alpinelinux.org/alpine/edge/testing | tee -a /etc/apk/repositories  && \
    echo http://dl-cdn.alpinelinux.org/alpine/edge/community | tee -a /etc/apk/repositories
- command: apk
  args:
  - add
  - --no-cache
  - curl
  - ca-certificates
  - python3
  - py3-numpy
  - py3-scipy
  - py3-scikit-learn
- command: apk
  args:
  - add
  - --no-cache
  - py3-numpy-f2py
  - freetype
  - jpeg
  - libpng
  - libstdc++
- command: apk
  args:
  - add
  - --no-cache
  - libgomp
  - graphviz
  - font-noto
- command: ash
  args:
  - -c
  - |-
    python3 -m ensurepip && \
    rm -r /usr/lib/python*/ensurepip && \
    pip3 --no-cache-dir install --upgrade pip setuptools wheel && \
    ln -s locale.h /usr/include/xlocale.h
- command: apk
  args:
  - add
  - --no-cache
  - --virtual=.build-deps
  - gcc
  - musl-dev
  - libffi-dev
  - gfortran
  - openblas-dev
  - py3-numpy-dev
  - freetype-dev
  - libpng-dev
  - build-base
  - linux-headers
  - python3-dev
  - git
  - cmake
  - jpeg-dev
  - bash
- command: pip3
  args:
  - install
  - -U
  - --no-cache-dir
  - Cython
  - pyyaml
  - pymkl
  - cffi
  - matplotlib
  - ipywidgets
  - notebook
  - requests
  - pillow
  - pandas
  - seaborn
- command: rm
  args:
  - /usr/include/xlocale.h
- command: rm
  args:
  - -rf
  - /root/.cache
- command: rm
  args:
  - -rf
