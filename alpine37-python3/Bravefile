base:
  image: alpine/3.7/amd64
  location: public

packages:
  manager: apk
  system:
    - bash
    - gcc
    - g++
    - python3
    - python3-dev  
    - openblas-dev

run:    
  - command: python3
    args:
      - -m
      - ensurepip
  
  - command: pip3
    args:
      - --no-cache-dir
      - install
      - --upgrade
      - pip
      - setuptools

service:
  name: alpine37-python3
  resources:
    ram: 2GB
    cpu: 2
  version: 1.0
